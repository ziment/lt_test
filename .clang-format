Language: Cpp
BasedOnStyle: Google

SeparateDefinitionBlocks: Always

DerivePointerAlignment: false

IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^<ext/.*\.h>'
    Priority: 4
    SortPriority: 0
    CaseSensitive: false

  - Regex: '^<.*\.h'
    Priority: 2
    SortPriority: 0
    CaseSensitive: false

  - Regex: '^<.*'
    Priority: 3
    SortPriority: 0
    CaseSensitive: false

    # Assumes you keep your libraries in the lib/ directory.
  - Regex: '^".*lib/.*"'
    Priority: 1
    SortPriority: 0
    CaseSensitive: false

  - Regex: '^".*"'
    Priority: 0
    SortPriority: 0
    CaseSensitive: false

  - Regex: '.*'
    Priority: -1
    SortPriority: 0
    CaseSensitive: false

AllowShortFunctionsOnASingleLine: Empty

BinPackArguments: false
BinPackParameters: false
AlignAfterOpenBracket: BlockIndent
AllowAllParametersOfDeclarationOnNextLine: false

PenaltyReturnTypeOnItsOwnLine: 999

InsertNewlineAtEOF: true

IndentWidth: 4
AccessModifierOffset: -2